<h1>Edit Produk</h1>

<form action="/produk/edit/{{produk.id}}" method="POST">
  <div>
    <label for="nama">Nama Produk:</label><br />
    <input
      type="text"
      id="nama"
      name="nama"
      value="{{produk.nama}}"
      required
    />
  </div>
  <br />

  <div>
    <label for="deskripsi">Deskripsi:</label><br />
    <textarea
      id="deskripsi"
      name="deskripsi"
      rows="4"
    >{{produk.deskripsi}}</textarea>
  </div>
  <br />

  <div>
    <label for="stok">Stok:</label><br />
    <input
      type="number"
      id="stok"
      name="stok"
      value="{{produk.stok}}"
      required
    />
  </div>
  <br />

  <button type="submit">Update</button>
  <a href="/produk">Batal</a>
</form>
